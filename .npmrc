# Keep node_modules clean and avoid legacy npm behavior
shamefully-hoist=true

node-linker=hoisted
virtual-store-dir=.pnpm


# Automatically install peer dependencies when required
auto-install-peers=true

# Ensure a single lockfile is used across all packages
shared-workspace-lockfile=true
shared-workspace-shrinkwrap=true

# Use the default public npm registry
registry=https://registry.npmjs.org/
