{
  "name": "gh-charities",
  "version": "0.1.0",
  "scripts": {
    "dev": "concurrently \"pnpm run run:backend\" \"pnpm run run:frontend\"",
    "run:frontend": "cd frontend && pnpm start",
    "run:backend": "pnpm --filter @gh-charities/backend start"
  },
  "private": true,
  "dependencies": {
    "@nestjs/passport": "^11.0.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "passport-jwt": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "tailwindcss": "^3.4.17"
  },
  "workspaces": [
    "backend/*",
    "frontend/*"
  ]
}
